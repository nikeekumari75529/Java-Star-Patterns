public class Pattern4 {
    public static void main(String[] args) {
        for (int i = 1; i <= 5; i++) {
            for (int space = 5 - i; space >= 1; space--) {
                System.out.print(" ");           // Print spaces
            }
            for (int j = 1; j <= i; j++) {
                System.out.print("* ");          // Print stars
            }
            System.out.println();
        }
    }
}
